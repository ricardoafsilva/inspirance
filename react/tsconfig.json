{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "esModuleInterop": true,
        "isolatedModules": true,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types", "src/typings"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
